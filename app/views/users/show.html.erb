<% if @user == current_user %>
  <h1>My Events</h1>
<% else %>
  <h1><%= @user.username.capitalize %>'s Events</h1>
<% end %>
<h2>Upcoming Events:</h2>
<ul>
  <% if @user.attended_events.upcoming.size.zero? %>
    <li>None Yet</li>
  <% else %>
    <%= @user.attended_events.upcoming.find_each do |event| %>
      <li><%= link_to event.name, event %> - <%= event.date %></li>
    <% end %>
  <% end %>
</ul>
<h2>Attended Events:</h2>
<ul>
  <% if @user.attended_events.occurred.size.zero? %>
    <li>None Yet</li>
  <% else %>
    <%= @user.attended_events.occurred.find_each do |event| %>
      <li><%= link_to event.name, event %> - <%= event.date %></li>
    <% end %>
  <% end %>
</ul>
<h2>Created Events:</h2>
<ul>
    <% if @user.created_events.size.zero? %>
    <li>None Yet</li>
  <% else %>
    <%= @user.created_events.find_each do |event| %>
      <li><%= link_to event.name, event %> - <%= event.date %></li>
    <% end %>
  <% end %>
</ul>